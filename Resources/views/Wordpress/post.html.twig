{% extends "UKMAmbBundle:Design:layout.html.twig" %}

{% block jumbo %}
	{% embed "UKMAmbBundle:Design:no_jumbo.html.twig" %}{% endembed %}
{% endblock %}

{% block breadcrumbs_top %}{% endblock %}

{% block content %}
	 <div class="col-xs-12 col-md-10 col-md-offset-1 post">
		<div class="row">
		 	<div class="col-xs-12 hidden-xs hidden-sm" style="text-align:right"></div>

			<h2 class="col-xs-12 visible-xs centered">{{post.title|raw}}</h2>
			{% if post.image.url != placeholder.post %}
			<img class="col-xs-12" src="{{post.image.url}}" />
			{% endif %}
			<h2 class="col-xs-12 hidden-xs">{{post.title|raw}}</h2>
			<p class="visible-xs"></p>
			<p class="col-xs-12 lead">{{post.lead|raw}}</p>
			<div class="col-xs-12">
				<div class="infos">
					<div class="date">
						<img src="{{url.theme_dir}}img/nav/nav-calendar.png" class="icon" />&nbsp;
						<span class="timeago" title="{{post.date|date('Y-m-d H:i')}}">{{post.date|date('d.m.Y H:i')}}</span>
					</div>
					<div class="categories">
						<img src="{{url.theme_dir}}img/nav/nav-tag.png" class="icon" />&nbsp;
						{% for category in post.categories %}
						{{category.name}}
						{% if loop.last != true %}, {% endif %}
						{% endfor %}
					</div>
					<div class="date">
						<img src="{{url.theme_dir}}img/nav/nav-maps.png" class="icon" />&nbsp;
						<a href="{{url.site}}">{{post.blog.name}}</a>
					</div>
					<div class="hidden-xs pull-right">
						<div class="fb-like" data-href="{{post.url}}" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></div>
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="visible-xs col-xs-12 facebookinfos" align="center">
					<div class="fb-like" data-href="{{post.url}}" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></div>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-12">
		        <div class="post_byline_wrapper col-sm-5 pull-right hidden-xs">
		        	{% embed "UKMAmbBundle:Design:byline.html.twig" %}{% endembed %}
		        </div>
		        <div class="post_content">
					{{post.content_wo_lead|raw}}
		        </div>
			</div>
		</div>
		
		<div class="row">
	        <div class="post_byline_wrapper col-xs-12 visible-xs">
	        	<h3>Skrevet av</h3>
	        	{% embed "UKMAmbBundle:Design:byline.html.twig" %}{% endembed %}
	        </div>
		</div>
	</div>
{% endblock %}