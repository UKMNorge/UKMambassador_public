{% extends "UKMAmbBundle:Design:layout.html.twig" %}

{% block jumbo_content %}{{ homepage.title }}{% endblock %}

{% block HTMLtitle %}{{ homepage.title }}{% endblock %}

{% block content %}
	<div class="container">
		<div class="row-fluid">
			<div class="col-12 col-md-4 float-right mb-4">
				<h2>Bli ambassadør</h2>
				<p>Vi ønsker alltid flere ambassadører velkommen!</p>
				<a href="{{ url('ukm_dip_login') }}" class="btn btn-block btn-outline-primary">Bli ambassadør</a>

				<h2>Logg inn</h2>
				<a href="{{ path('ukm_dip_login') }}" class="btn btn-block btn-outline-primary">Logg inn med UKMid</a>
				<div class="clearfix"></div>

			</div>
			<div class="col-12 col-md-8 float-left">
				{% if authenticated %}
					<div class="alert alert-warning">
						<strong>Du må være registrert ambassadør for å se ambassadørsiden</strong>
						<br />
						Du er logget inn med facebook, men vi finner ikke at du er registrert ambassadør. 
						<br />
						Trykk på knappen "bli ambassadør", og følg veiviseren, så er du i gang!
					</div>
				{% endif %}

				{{ homepage.content|raw }}
			</div>
		</div>
	</div>
{% endblock %}
